@model IEnumerable<WebBanHangOnline.Models.EF.Product>



@*@{
        ViewBag.Title = "Partial_ItemsByCateId";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
    }*@

@if (Model.Any() && Model != null)
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImge = "";
        var img = item.ProductImages.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImge = img.Image;
        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@item.Image" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-@item.Id">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@WebBanHangOnline.Models.Commons.Common.FormatNumber(item.Price)<span>@item.PriceSale</span></div>
                    }
                    else
                    {
                        <div class="product_price">@item.Price</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
        </div>

    }
}

@section scripts{
    <script src="~/Scripts/JsShopping.js"></script>
}

