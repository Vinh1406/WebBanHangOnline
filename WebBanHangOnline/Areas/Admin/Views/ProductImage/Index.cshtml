@model IEnumerable<WebBanHangOnline.Models.EF.ProductImage>
@{
    ViewBag.Title = "Ảnh đại diện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}



<style>
    .glImage {
        list-style: none;
        display: grid;
        margin: 0;
        padding: 0;
        grid-template-columns: repeat(2, 1fr); /* 2 ảnh mỗi hàng */
        gap: 20px;
        position: relative;
    }

        .glImage li {
            position: relative;
        }

    .vn_icon {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 5px;
    }

    .vn_content {
        overflow: hidden;
    }

    .gallery {
        width: 80%;
        max-width: 1200px;
        margin: auto;
    }
