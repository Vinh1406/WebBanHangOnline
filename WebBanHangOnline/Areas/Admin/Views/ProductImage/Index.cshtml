                var conf = confirm("Bạn có muốn xóa không?");
                if (conf === true) {
                    $.ajax({
                        url: '/Admin/ProductImage/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
