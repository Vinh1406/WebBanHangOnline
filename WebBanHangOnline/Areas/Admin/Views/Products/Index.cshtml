
@model PagedList.PagedList<WebBanHangOnline.Models.EF.Product>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Product" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}


<!-- Content Wrapper. Contains page content -->
@*<div class="content-wrapper">*@
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/Admin/Products/Add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="btnDeleteAll"> Xóa</a>
            </div>
        </div>
        <div class="card-body">
            @*<div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("index", "Product", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", new { @class = "form-control" })
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm Kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>*@
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th><input type="checkbox" id="selectALL" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";

                            <tr id="trow_@item.Id" class="text-center">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img src="@item.Image" width="80" height="80" /></td>   
                                <td style="width:300px;text-align:left;">@item.Title</td>
                                <<td>@item.ProductCategory.Title</td>
                                <<td>@item.Quantity</td>
                                <<td>@item.Price</td>
                                <td>@item.CreateDate.ToString("dd//MM//yyyy")</td>
                                <td>
                                    <a href='#' data-id="@item.Id" class="btnActive">  @Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/Product/edit/@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btn-sm btnDelete">Xóa</a>

                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            @*<div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                </div>
            </div>*@
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@*</div>*@
<!-- /.content-wrapper -->

@section scripts{
    <script>

        $(document).ready(function () {



            $('body').on('change', '#selectALL', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
            })



            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id")
                var conf = confirm("Ban co muon xoa ban ghi nay khong");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/Product/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })

                }

            })
        })
        $(document).ready(function () {
            // Đoạn mã cho sự kiện click trên .btnActive
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault(); // Đảm bảo gọi đúng e.preventDefault()
                var btn = $(this);
                var id = btn.data("id");

                $.ajax({
                    url: '/admin/Product/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });

            // Đoạn mã cho sự kiện click trên #btnDeleteAll
            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault(); // Đảm bảo gọi đúng e.preventDefault()
                var str = "";
                debugger;
                var checkbox = $(this).parents('.card').find('tbody tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        $(this).attr('selected', 'checked'); // Sử dụng $(this) thay vì checkbox
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        $(this).attr('selected', ''); // Sử dụng $(this) thay vì checkbox
                    }
                });

                if (str.length > 0) {
                    var cof = confirm("ban co muon xoa het khong");
                    if (cof === true) {
                        $.ajax({
                            url: '/admin/Product/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });
        });


    </script>
}

